.unimportant-information-label {
    -unity-text-align: middle-left;
    -unity-font-style: italic;
    padding-right: 5px;
    padding-left: 5px;
    margin-right: 5px;
    margin-left: 5px;
    opacity: 0.5;
    transition-property: opacity;
    transition-duration: 0.25s;
}

.unimportant-information-label:hover {
